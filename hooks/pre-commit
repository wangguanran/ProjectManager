#!/bin/bash

# Git pre-commit hook to run code formatting, linting and tests before committing
# This script will prevent committing if any checks fail

set -e  # Exit on any error

echo "Running pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Function to print colored output
print_status() {
    echo -e "${GREEN}[INFO]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Check if we're in a git repository
if ! git rev-parse --git-dir > /dev/null 2>&1; then
    print_error "Not in a git repository"
    exit 1
fi

# Get the current branch
CURRENT_BRANCH=$(git symbolic-ref --short HEAD)
print_status "Current branch: $CURRENT_BRANCH"

# Check if black is installed, if not, try to install it
if ! command -v black >/dev/null 2>&1; then
    print_warning "black not found. Installing via pip..."
    pip install black
    if ! command -v black >/dev/null 2>&1; then
        print_error "Error: 'black' could not be installed. Please install it manually."
        exit 1
    fi
fi

# Check if isort is installed, if not, try to install it
if ! command -v isort >/dev/null 2>&1; then
    print_warning "isort not found. Installing via pip..."
    pip install isort
    if ! command -v isort >/dev/null 2>&1; then
        print_error "Error: 'isort' could not be installed. Please install it manually."
        exit 1
    fi
fi

# Check if pylint is installed
if ! command -v pylint &> /dev/null; then
    print_warning "pylint not found. Installing pylint..."
    pip install pylint
fi

# Check if pytest is installed
if ! command -v pytest &> /dev/null; then
    print_warning "pytest not found. Installing pytest..."
    pip install pytest
fi

# Get the git repository root directory
REPO_ROOT=$(git rev-parse --show-toplevel)
# Change to repository root to ensure correct path resolution
cd "$REPO_ROOT"

# Check formatting without making changes
print_status "Running black formatting check..."
if ! black --check .; then
    print_error "Code style issues found. Please run 'black .' to format your code before committing."
    exit 1
fi
print_status "Black formatting check passed ✓"

# Check import sorting
print_status "Running isort import sorting check..."
if ! isort --check-only .; then
    print_error "Import sorting issues found. Please run 'isort .' to fix imports before committing."
    exit 1
fi
print_status "Import sorting check passed ✓"

# Run pylint on all Python files in the project
print_status "Running pylint..."
PY_FILES=$(find . -type f -name '*.py' ! -path './venv/*' ! -path './out/*' ! -path './.cache/*')
if pylint $PY_FILES --rcfile=.pylintrc --output-format=text; then
    print_status "Pylint passed ✓"
else
    print_error "Pylint failed ✗"
    print_error "Please fix the linting issues before committing"
    exit 1
fi

# Run pytest tests
print_status "Running pytest..."
if pytest "$REPO_ROOT/tests/" -v; then
    print_status "Pytest passed ✓"
else
    print_error "Pytest failed ✗"
    print_error "Please fix the failing tests before committing"
    exit 1
fi

print_status "All pre-commit checks passed! ✓"
print_status "Ready to commit to $CURRENT_BRANCH" 